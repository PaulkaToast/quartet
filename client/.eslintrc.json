{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "rules": {
        "import/extensions": "off",
        "import/no-unresolved": "off",
        "import/no-extraneous-dependencies": "off",
        "linebreak-style": "off",
        "no-plusplus": "off",
        "no-use-before-define": [ "error", { "functions": false } ],
        "indent": [ 2, 4 ],
        "no-restricted-syntax": "off",
        "max-len": "off",
        "no-mixed-operators": "off"
    }
}